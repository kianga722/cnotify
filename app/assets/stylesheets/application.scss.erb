@import "bootstrap";

/*
Nav Styling
*/

.filter {
  margin-left: 2%;
}

.dropdown-menu {
  max-height: 420px;
  overflow: scroll;
}

/*
Filter Current Styling
*/

#filterCurrent {
  padding: 5px;

  background-color: #f3f3f3;
  text-align: center;
}

#filterFill {
  display: inline-block;
  margin-left: 5px;
  padding: 5px;

  border: 1px solid red;
  border-radius: 5px;
  font-weight: 700;
}


/* 
Event Styling
*/

#eventList {
  max-width: 1000px;
  margin-top: 20px;
}

.month-wrapper {
  margin: 20px 0;

  text-align: center;
}

.month {
  display: inline-block;
  padding: 5px 20px;

  font-size: 2rem;
  border: 1px solid orange;
  border-radius: 9px;
}

.day {
  margin-left: 10%;

  font-size: 1.5rem;
  font-weight: 700;
  border-bottom: 1px solid;
}

 .event {
   position: relative;
   margin: 20px 0;
   padding: 10px 20px;

   border: 1px solid blue;
   border-radius: 8px;
 }

 .title {
   font-weight: 700;
 }

 .artists {
   color: #09a8a2;
   font-size: 1.2rem;
   font-weight: 700;
 }

 .venueTitle {
    color: #711e1e;
 }

 .new {
    position: absolute;
    right: 11px;
    top: 14px;

    transform: rotate(45deg);
    color: #dd7500;
    font-weight: 700;
    font-size: 1.5rem;
 }

 .hide {
   display: none;
 }

 /*
No Events styling
*/

#noEvents {
  margin: 10% 0;
  text-align: center;
}
